{
  "name": "lukeworks",
  "version": "0.2.0",
  "authors": [
    "Lucas Petherbridge <me@lukeworks.tech>"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "npm run lint && npm run test:ci && next build",
    "test": "jest --watch",
    "test:cov": "rm -rf coverage && jest --coverage && open coverage/index.html",
    "test:ci": "rm -rf coverage && jest --ci --coverage --coverageReporters cobertura",
    "lint": "next lint --dir src",
    "lint:fix": "next lint --dir src --fix",
    "prepare": "cd .. && husky install web/.husky"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.1",
    "next": "^12.2.2",
    "p5": "^1.4.1",
    "react-markdown": "^8.0.3",
    "react-remark": "^2.1.0",
    "react-transition-group": "^4.4.2",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.30.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/p5": "^1.4.2",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@types/react-transition-group": "^4.4.4",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.4",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^28.1.3",
    "next-router-mock": "^0.7.4",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "typescript": "^4.6.3",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
